---
// Pre-renderizar esta página estáticamente
export const prerender = true;

import AdminLayout from "../../../layouts/AdminLayout.astro";
---

<AdminLayout title="Gestión de Menú">
  <div class="flex justify-between items-center mb-8">
    <h1 class="font-heading text-4xl font-bold text-text-primary">
      Gestión de Menú
    </h1>
    <div class="flex gap-x-4">
      <button
        id="add-category-btn"
        class="bg-surface hover:bg-white/10 text-text-primary font-bold py-2 px-4 rounded-md transition-all duration-200 cursor-pointer border border-white/20 hover:border-white/40 hover:scale-105 active:scale-95"
        >Añadir Categoría</button
      >
      <button
        id="add-item-btn"
        class="bg-accent text-white font-bold py-2 px-4 rounded-md hover:bg-opacity-80 transition-all duration-200 cursor-pointer hover:scale-105 active:scale-95 hover:shadow-lg"
        >Añadir Plato</button
      >
    </div>
  </div>

  <!-- Contenedor principal del menú -->
  <div id="menu-container">
    <div id="loading-message" class="text-center text-text-secondary p-8">
      <div
        class="animate-spin rounded-full h-12 w-12 border-b-2 border-accent mx-auto mb-4"
      >
      </div>
      <p>Cargando menú...</p>
    </div>

    <div id="error-message" class="hidden text-center text-red-400 p-8">
      <p>Error al cargar el menú. Por favor, intenta nuevamente.</p>
      <button
        id="retry-btn"
        class="mt-4 bg-accent text-white px-4 py-2 rounded-md hover:bg-opacity-80"
      >
        Reintentar
      </button>
    </div>

    <div id="menu-content" class="hidden space-y-8">
      <!-- Las categorías se renderizarán aquí dinámicamente -->
    </div>
  </div>

  <!-- Modal para añadir/editar categoría -->
  <div
    id="category-modal"
    class="fixed inset-0 bg-black/30 backdrop-blur-sm z-50 hidden opacity-0 transition-all duration-300"
  >
    <div class="flex items-center justify-center min-h-full p-4">
      <div
        class="bg-surface p-8 rounded-xl w-full max-w-md shadow-2xl border border-white/10 transform scale-95 transition-all duration-300"
        id="category-modal-content"
      >
        <div class="flex items-center justify-between mb-6">
          <div class="flex items-center gap-3">
            <div class="p-2 bg-accent/20 rounded-lg">
              <svg
                class="w-6 h-6 text-accent"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"
                ></path>
              </svg>
            </div>
            <h2
              id="category-modal-title"
              class="font-heading text-2xl font-bold text-text-primary"
            >
              Añadir Categoría
            </h2>
          </div>
          <button
            type="button"
            id="close-category-modal"
            class="cursor-pointer p-2 hover:bg-white/10 rounded-lg transition-all duration-200 group"
          >
            <svg
              class="w-5 h-5 text-text-secondary group-hover:text-text-primary group-hover:rotate-90 transition-all duration-200"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>

        <form id="category-form" class="space-y-6">
          <div class="space-y-2">
            <label
              for="category-name"
              class="flex items-center gap-2 text-text-primary font-medium"
            >
              <svg
                class="w-4 h-4 text-accent"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"
                ></path>
              </svg>
              Nombre de la Categoría
            </label>
            <input
              type="text"
              id="category-name"
              name="name"
              required
              placeholder="Ej: Entradas, Platos Principales..."
              class="w-full px-4 py-3 bg-background text-text-primary border border-white/20 rounded-lg focus:outline-none focus:border-accent focus:ring-2 focus:ring-accent/20 transition-all"
            />
          </div>

          <div class="space-y-2">
            <label
              for="category-order"
              class="flex items-center gap-2 text-text-primary font-medium"
            >
              <svg
                class="w-4 h-4 text-accent"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"></path>
              </svg>
              Orden de Visualización
            </label>
            <input
              type="number"
              id="category-order"
              name="displayOrder"
              min="1"
              required
              placeholder="1"
              class="w-full px-4 py-3 bg-background text-text-primary border border-white/20 rounded-lg focus:outline-none focus:border-accent focus:ring-2 focus:ring-accent/20 transition-all"
            />
          </div>

          <div class="flex gap-3 pt-4">
            <button
              type="button"
              id="cancel-category-btn"
              class="cursor-pointer flex-1 bg-background text-text-secondary border border-white/20 py-3 px-4 rounded-lg hover:bg-white/10 hover:text-text-primary transition-all duration-200 font-medium"
            >
              Cancelar
            </button>
            <button
              type="submit"
              id="save-category-btn"
              class="cursor-pointer flex-1 bg-accent text-white py-3 px-4 rounded-lg hover:bg-accent/80 transition-all duration-200 font-medium shadow-lg hover:shadow-accent/25"
            >
              Guardar
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Modal para añadir/editar plato -->
  <div
    id="item-modal"
    class="fixed inset-0 bg-black/30 backdrop-blur-sm z-50 hidden opacity-0 transition-all duration-300"
  >
    <div class="flex items-center justify-center min-h-full p-4">
      <div
        class="bg-surface p-6 rounded-xl w-full max-w-4xl max-h-[90vh] overflow-y-auto shadow-2xl border border-white/10 transform scale-95 transition-all duration-300"
        id="item-modal-content"
      >
        <div class="flex items-center justify-between mb-6">
          <div class="flex items-center gap-3">
            <div class="p-2 bg-accent/20 rounded-lg">
              <svg
                class="w-6 h-6 text-accent"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 1.343-4 3.657-4a8 8 0 017.657 7.657zM12 12v.01"
                ></path>
              </svg>
            </div>
            <h2
              id="item-modal-title"
              class="font-heading text-2xl font-bold text-text-primary"
            >
              Añadir Plato
            </h2>
          </div>
          <button
            type="button"
            id="close-item-modal"
            class="cursor-pointer p-2 hover:bg-white/10 rounded-lg transition-all duration-200 group"
          >
            <svg
              class="w-5 h-5 text-text-secondary group-hover:text-text-primary group-hover:rotate-90 transition-all duration-200"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>

        <form id="menu-item-form" class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          <!-- Columna izquierda - Información básica -->
          <div class="space-y-4">
            <div class="space-y-2">
              <label
                for="item-category"
                class="flex items-center gap-2 text-text-primary font-medium text-sm"
              >
                <svg
                  class="w-4 h-4 text-accent"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"
                  ></path>
                </svg>
                Categoría
              </label>
              <select
                id="item-category"
                name="categoryId"
                required
                class="w-full px-3 py-2.5 text-sm bg-background text-text-primary border border-white/20 rounded-lg focus:outline-none focus:border-accent focus:ring-2 focus:ring-accent/20 transition-all"
              >
                <option value="">Seleccionar categoría...</option>
              </select>
            </div>

            <div class="space-y-2">
              <label
                for="item-name"
                class="flex items-center gap-2 text-text-primary font-medium text-sm"
              >
                <svg
                  class="w-4 h-4 text-accent"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"
                  ></path>
                </svg>
                Nombre del Plato
              </label>
              <input
                type="text"
                id="item-name"
                name="name"
                required
                placeholder="Ej: Pasta Alfredo"
                class="w-full px-3 py-2.5 text-sm bg-background text-text-primary border border-white/20 rounded-lg focus:outline-none focus:border-accent focus:ring-2 focus:ring-accent/20 transition-all"
              />
            </div>

            <div class="space-y-2">
              <label
                for="item-description"
                class="flex items-center gap-2 text-text-primary font-medium text-sm"
              >
                <svg
                  class="w-4 h-4 text-accent"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                  ></path>
                </svg>
                Descripción
              </label>
              <textarea
                id="item-description"
                name="description"
                rows="3"
                placeholder="Descripción del plato..."
                class="w-full px-3 py-2.5 text-sm bg-background text-text-primary border border-white/20 rounded-lg focus:outline-none focus:border-accent focus:ring-2 focus:ring-accent/20 transition-all resize-none"
              ></textarea>
            </div>

            <div class="space-y-2">
              <label
                for="item-price"
                class="flex items-center gap-2 text-text-primary font-medium text-sm"
              >
                <svg
                  class="w-4 h-4 text-accent"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"
                  ></path>
                </svg>
                Precio
              </label>
              <div class="relative">
                <span
                  class="absolute left-3 top-1/2 transform -translate-y-1/2 text-text-secondary text-sm"
                  >$</span
                >
                <input
                  type="number"
                  id="item-price"
                  name="price"
                  step="0.01"
                  min="0"
                  required
                  placeholder="0.00"
                  class="w-full pl-7 pr-3 py-2.5 text-sm bg-background text-text-primary border border-white/20 rounded-lg focus:outline-none focus:border-accent focus:ring-2 focus:ring-accent/20 transition-all"
                />
              </div>
            </div>

            <div id="item-availability-container" class="hidden">
              <label class="flex items-center gap-3 cursor-pointer">
                <div class="relative">
                  <input
                    type="checkbox"
                    id="item-available"
                    name="isAvailable"
                    class="sr-only peer"
                  />
                  <div
                    class="w-10 h-5 bg-gray-600 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-4 after:w-4 after:transition-all peer-checked:bg-accent"
                  >
                  </div>
                </div>
                <div class="flex items-center gap-2">
                  <svg
                    class="w-4 h-4 text-accent"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span class="text-text-primary font-medium text-sm"
                    >Plato disponible</span
                  >
                </div>
              </label>
            </div>
          </div>

          <!-- Columna derecha - Imagen -->
          <div class="space-y-4">
            <label
              class="flex items-center gap-2 text-text-primary font-medium text-sm"
            >
              <svg
                class="w-4 h-4 text-accent"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                ></path>
              </svg>
              Imagen del Plato
            </label>

            <!-- Selector de método de imagen -->
            <div
              class="flex bg-background rounded-lg p-1 border border-white/20"
            >
              <button
                type="button"
                id="upload-tab"
                class="flex-1 px-3 py-2 text-sm font-medium rounded-md transition-all duration-200 bg-accent text-white"
              >
                <div class="flex items-center justify-center gap-2">
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"
                    ></path>
                  </svg>
                  Subir archivo
                </div>
              </button>
              <button
                type="button"
                id="url-tab"
                class="flex-1 px-3 py-2 text-sm font-medium rounded-md transition-all duration-200 text-text-secondary hover:text-text-primary hover:bg-white/5"
              >
                <div class="flex items-center justify-center gap-2">
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"
                    ></path>
                  </svg>
                  URL externa
                </div>
              </button>
            </div>

            <!-- Vista previa de la imagen (compartida) -->
            <div id="item-image-preview-container" class="hidden">
              <div class="relative">
                <img
                  id="item-image-preview"
                  src=""
                  alt="Vista previa"
                  class="w-full h-40 object-cover rounded-lg border border-white/20"
                />
                <button
                  type="button"
                  id="remove-image-preview"
                  class="absolute top-2 right-2 bg-red-600 hover:bg-red-700 text-white p-1.5 rounded-full transition-colors"
                >
                  <svg
                    class="w-3 h-3"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                </button>
                <div
                  id="image-source-indicator"
                  class="absolute bottom-2 left-2 px-2 py-1 bg-black/70 text-white text-xs rounded-md"
                >
                </div>
              </div>
            </div>

            <!-- Panel de subida de archivo -->
            <div id="upload-panel" class="space-y-3">
              <div
                id="item-image-upload-area"
                class="border-2 border-dashed border-white/20 rounded-lg p-4 text-center hover:border-accent/50 transition-colors cursor-pointer"
              >
                <input
                  type="file"
                  id="item-image-upload"
                  accept="image/*"
                  class="hidden"
                />
                <div id="upload-content" class="space-y-2">
                  <svg
                    class="w-8 h-8 text-accent mx-auto"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"
                    ></path>
                  </svg>
                  <div>
                    <p class="text-text-primary font-medium text-sm">
                      Haz clic o arrastra una imagen
                    </p>
                    <p class="text-text-secondary text-xs">
                      PNG, JPG, WEBP hasta 5MB
                    </p>
                  </div>
                </div>

                <!-- Indicador de progreso compacto -->
                <div id="upload-progress" class="hidden space-y-2">
                  <svg
                    class="w-6 h-6 text-accent mx-auto animate-spin"
                    fill="none"
                    viewBox="0 0 24 24"
                  >
                    <circle
                      class="opacity-25"
                      cx="12"
                      cy="12"
                      r="10"
                      stroke="currentColor"
                      stroke-width="4"></circle>
                    <path
                      class="opacity-75"
                      fill="currentColor"
                      d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                    ></path>
                  </svg>
                  <div>
                    <p class="text-text-primary font-medium text-sm">
                      Subiendo...
                    </p>
                    <div class="w-full bg-background rounded-full h-1.5 mt-1">
                      <div
                        id="progress-bar"
                        class="bg-accent h-1.5 rounded-full transition-all duration-300"
                        style="width: 0%"
                      >
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Panel de URL externa -->
            <div id="url-panel" class="hidden space-y-3">
              <div class="space-y-2">
                <input
                  type="url"
                  id="item-image-url"
                  name="imageUrl"
                  placeholder="https://ejemplo.com/imagen.jpg"
                  class="w-full px-3 py-2.5 text-sm bg-background text-text-primary border border-white/20 rounded-lg focus:outline-none focus:border-accent focus:ring-2 focus:ring-accent/20 transition-all"
                />
                <p class="text-text-secondary text-xs flex items-center gap-1">
                  <svg
                    class="w-3 h-3"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                    ></path>
                  </svg>
                  Pega la URL de una imagen que esté alojada en internet
                </p>
              </div>

              <!-- Botón para probar la URL -->
              <button
                type="button"
                id="test-url-btn"
                class="w-full px-3 py-2 text-sm bg-white/5 hover:bg-white/10 text-text-secondary hover:text-text-primary border border-white/20 rounded-lg transition-all duration-200 flex items-center justify-center gap-2"
              >
                <svg
                  class="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                  ></path>
                </svg>
                Previsualizar imagen
              </button>
            </div>
          </div>

          <!-- Botones - Span completo en móvil, mantener en dos columnas en desktop -->
          <div class="lg:col-span-2 flex gap-3 pt-4 border-t border-white/10">
            <button
              type="button"
              id="cancel-item-btn"
              class="cursor-pointer flex-1 bg-background text-text-secondary border border-white/20 py-2.5 px-4 rounded-lg hover:bg-white/10 hover:text-text-primary transition-all duration-200 font-medium text-sm"
            >
              Cancelar
            </button>
            <button
              type="submit"
              id="save-item-btn"
              class="cursor-pointer flex-1 bg-accent text-white py-2.5 px-4 rounded-lg hover:bg-accent/80 transition-all duration-200 font-medium text-sm shadow-lg hover:shadow-accent/25"
            >
              Guardar
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</AdminLayout>

<style>
  /* Animaciones suaves para el área de subida */
  #item-image-upload-area {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  #item-image-upload-area:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
  }

  /* Animación para vista previa de imagen */
  #item-image-preview-container {
    animation: fadeIn 0.3s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
