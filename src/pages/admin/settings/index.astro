---
import AdminLayout from "../../../layouts/AdminLayout.astro";
---

<AdminLayout title="Ajustes del Restaurante">
  <h1 class="font-heading text-4xl font-bold mb-8">Ajustes del Restaurante</h1>

  <!-- Contenedor principal que mostrarÃ¡ un estado de carga o el formulario -->
  <div id="settings-container" class="max-w-2xl mx-auto">
    <!-- Estado de carga inicial -->
    <div id="loading-state" class="text-center text-text-secondary p-8">
      <p>Cargando ajustes...</p>
    </div>

    <div id="form-container" class="bg-surface p-8 rounded-lg shadow-lg hidden">
      <form id="settings-form" class="space-y-6">
        <div class="flex flex-col items-center space-y-4">
          <img
            id="logo-preview"
            src="/placeholder-image.jpg"
            alt="Logo actual"
            class="w-32 h-32 rounded-full object-cover border-4 border-accent"
          />
          <input
            type="file"
            id="logo-upload"
            name="logoFile"
            accept="image/*"
            class="text-sm ..."
          />
        </div>
        <div>
          <label for="name" class="block ...">Nombre del Restaurante</label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full ..."
          />
        </div>
        <div>
          <label for="brandingColor" class="block ...">Color de la Marca</label>
          <input
            type="color"
            id="brandingColor"
            name="brandingColor"
            value="#E55959"
            class="w-full ..."
          />
        </div>
        <button type="submit" class="w-full ...">Guardar Cambios</button>
      </form>
      <div id="form-message" class="mt-4 text-center"></div>
    </div>
  </div>
</AdminLayout>

<script>
  import "../../../scripts/settings-form.ts";
</script>
