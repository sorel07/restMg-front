---
// Pre-renderizar esta página estáticamente
export const prerender = true;

import AdminLayout from "../../../layouts/AdminLayout.astro";
---

<AdminLayout title="Gestión de Mesas">
  <div class="flex justify-between items-center mb-8">
    <h1 class="font-heading text-4xl font-bold text-text-primary">
      Gestión de Mesas
    </h1>
    <button
      id="add-table-btn"
      class="bg-accent text-white font-bold py-2 px-4 rounded-md hover:bg-opacity-80 transition-all duration-200 cursor-pointer hover:scale-105 active:scale-95 hover:shadow-lg"
    >
      Añadir Mesa
    </button>
  </div>

  <!-- Contenedor principal de las mesas -->
  <div id="tables-container">
    <div id="loading-message" class="text-center text-text-secondary p-8">
      <div
        class="animate-spin rounded-full h-12 w-12 border-b-2 border-accent mx-auto mb-4"
      >
      </div>
      <p>Cargando mesas...</p>
    </div>

    <div id="error-message" class="hidden text-center text-red-400 p-8">
      <p>Error al cargar las mesas. Por favor, intenta nuevamente.</p>
      <button
        id="retry-btn"
        class="mt-4 bg-accent text-white px-4 py-2 rounded-md hover:bg-opacity-80"
      >
        Reintentar
      </button>
    </div>

    <div id="tables-content" class="hidden">
      <div 
        id="tables-grid" 
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6"
      >
        <!-- Las mesas se renderizarán aquí dinámicamente -->
      </div>
    </div>
  </div>

  <!-- Modal para Crear/Editar Mesa -->
  <div
    id="table-modal"
    class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden opacity-0 transition-opacity duration-300"
  >
    <div class="flex items-center justify-center min-h-screen p-4">
      <div
        id="table-modal-content"
        class="bg-surface rounded-lg shadow-xl w-full max-w-md transform scale-95 transition-transform duration-300"
      >
        <!-- Header del Modal -->
        <div class="flex justify-between items-center p-6 border-b border-white/10">
          <h2
            id="table-modal-title"
            class="font-heading text-xl font-semibold text-text-primary"
          >
            Añadir Mesa
          </h2>
          <button
            id="close-table-modal"
            class="text-text-secondary hover:text-text-primary transition-colors"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>

        <!-- Formulario -->
        <form id="table-form" class="p-6 space-y-4">
          <div class="space-y-2">
            <label
              for="table-code"
              class="flex items-center gap-2 text-text-primary font-medium text-sm"
            >
              <svg
                class="w-4 h-4 text-accent"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"
                ></path>
              </svg>
              Código de la Mesa
            </label>
            <input
              id="table-code"
              name="code"
              type="text"
              required
              placeholder="Ej: Mesa 01, Barra 2"
              class="w-full px-3 py-2.5 text-sm bg-background text-text-primary border border-white/20 rounded-lg focus:outline-none focus:border-accent focus:ring-2 focus:ring-accent/20 transition-all"
            />
          </div>

          <!-- Campo de estado (solo visible al editar) -->
          <div id="table-status-container" class="space-y-2 hidden">
            <label
              for="table-status"
              class="flex items-center gap-2 text-text-primary font-medium text-sm"
            >
              <svg
                class="w-4 h-4 text-accent"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
              Estado
            </label>
            <select
              id="table-status"
              name="status"
              class="w-full px-3 py-2.5 text-sm bg-background text-text-primary border border-white/20 rounded-lg focus:outline-none focus:border-accent focus:ring-2 focus:ring-accent/20 transition-all"
            >
              <option value="Available">Disponible</option>
              <option value="Occupied">Ocupada</option>
            </select>
          </div>

          <!-- Botones -->
          <div class="flex gap-3 pt-4">
            <button
              type="button"
              id="cancel-table-btn"
              class="flex-1 px-4 py-2.5 text-sm font-medium text-text-secondary bg-background border border-white/20 rounded-lg hover:bg-white/5 transition-colors"
            >
              Cancelar
            </button>
            <button
              type="submit"
              class="flex-1 px-4 py-2.5 text-sm font-medium text-white bg-accent rounded-lg hover:bg-opacity-80 transition-colors"
            >
              Guardar
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Modal para QR -->
  <div
    id="qr-modal"
    class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden opacity-0 transition-opacity duration-300"
  >
    <div class="flex items-center justify-center min-h-screen p-4">
      <div
        id="qr-modal-content"
        class="bg-surface rounded-lg shadow-xl w-full max-w-md transform scale-95 transition-transform duration-300"
      >
        <!-- Header del Modal -->
        <div class="flex justify-between items-center p-6 border-b border-white/10">
          <h2
            id="qr-modal-title"
            class="font-heading text-xl font-semibold text-text-primary"
          >
            Código QR
          </h2>
          <button
            id="close-qr-modal"
            class="text-text-secondary hover:text-text-primary transition-colors"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>

        <!-- Contenido del QR -->
        <div class="p-6 text-center space-y-4">
          <!-- Contenedor del QR con estado mejorado -->
          <div class="bg-white p-4 rounded-lg inline-block relative min-h-[200px] w-full max-w-[280px] mx-auto">
            <!-- Imagen del QR -->
            <img
              id="qr-image"
              alt="Código QR"
              class="w-48 h-48 mx-auto transition-opacity duration-300"
              style="display: none; opacity: 0;"
            />
            
            <!-- Loading shimmer -->
            <div id="qr-loading" class="w-full h-48 flex flex-col items-center justify-center space-y-3">
              <div class="w-12 h-12 border-4 border-gray-200 border-t-accent rounded-full animate-spin"></div>
              <p class="text-gray-600 text-sm font-medium">Generando QR...</p>
            </div>
            
            <!-- Error state -->
            <div id="qr-error" class="w-full min-h-[180px] flex flex-col items-center justify-center space-y-3 text-red-500 px-2" style="display: none;">
              <!-- Icono de error dinámico -->
              <div id="error-icon-container" class="flex-shrink-0">
                <!-- Icono de error general -->
                <svg id="general-error-icon" class="w-10 h-10 text-red-500 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <!-- Icono de configuración (para errores de slug) -->
                <svg id="config-error-icon" class="w-10 h-10 text-orange-500 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="display: none;">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              
              <!-- Mensaje de error -->
              <div class="text-center space-y-1 flex-1 flex flex-col justify-center">
                <p id="qr-error-message" class="text-xs font-medium break-words leading-tight">Error al generar QR</p>
                <p id="qr-error-subtitle" class="text-xs text-gray-600 break-words leading-tight" style="display: none;">
                  Configura el subdominio para generar códigos QR
                </p>
              </div>
              
              <!-- Botones de acción -->
              <div class="flex flex-col gap-2 w-full flex-shrink-0">
                <a id="settings-link" href="/admin/settings" class="text-xs bg-accent text-white px-3 py-2 rounded-md hover:bg-opacity-80 transition-colors text-center font-medium" style="display: none;">
                  <span class="flex items-center justify-center gap-1">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    Configurar Ajustes
                  </span>
                </a>
                <button id="retry-qr-btn" class="text-xs bg-gray-100 text-gray-700 px-3 py-2 rounded-md hover:bg-gray-200 transition-colors font-medium">
                  <span class="flex items-center justify-center gap-1">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                    </svg>
                    Reintentar
                  </span>
                </button>
              </div>
            </div>
          </div>
          
          <div class="space-y-3">
            <!-- Botón de descarga mejorado -->
            <button
              id="download-qr-btn"
              class="w-full bg-accent text-white font-medium py-2.5 px-4 rounded-lg hover:bg-opacity-80 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
              disabled
            >
              <span id="download-btn-text">Descargar QR</span>
            </button>
            
            <!-- Información adicional -->
            <p id="qr-info" class="text-xs text-text-secondary" style="display: none;">
              Haz clic en "Descargar QR" para guardar la imagen
            </p>
            
            <button
              id="close-qr-btn"
              class="w-full bg-background text-text-primary border border-white/20 font-medium py-2.5 px-4 rounded-lg hover:bg-white/5 transition-colors"
            >
              Cerrar
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="../../../scripts/tables-page.ts"></script>
</AdminLayout>
