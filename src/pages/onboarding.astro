---
// Pre-renderizar esta página estáticamente
export const prerender = true;

import Layout from "../layouts/Layout.astro";
---

<Layout title="Registra tu Restaurante">
  <main class="min-h-screen flex items-center justify-center p-4 bg-background">
    <div class="w-full max-w-md bg-surface p-8 rounded-lg shadow-lg">
      <header class="text-center mb-8">
        <h1 class="font-heading text-3xl font-bold text-accent">
          Crea tu Cuenta
        </h1>
        <p class="text-text-secondary mt-2">
          Empieza a gestionar tu restaurante hoy mismo.
        </p>
      </header>

      <!-- 
        El id="onboarding-form" es importante para que nuestro script lo pueda encontrar.
      -->
      <form id="onboarding-form" class="space-y-6">
        <div>
          <label
            for="restaurantName"
            class="block text-sm font-medium text-text-secondary mb-2"
            >Nombre del Restaurante</label
          >
          <input
            type="text"
            id="restaurantName"
            name="restaurantName"
            required
            class="w-full bg-background border border-accent/20 rounded-md p-3 text-text-primary focus:ring-accent focus:border-accent transition-colors"
          />
        </div>

        <div>
          <label
            for="adminFullName"
            class="block text-sm font-medium text-text-secondary mb-2"
            >Tu Nombre Completo</label
          >
          <input
            type="text"
            id="adminFullName"
            name="adminFullName"
            required
            class="w-full bg-background border border-accent/20 rounded-md p-3 text-text-primary focus:ring-accent focus:border-accent transition-colors"
          />
        </div>

        <div>
          <label
            for="adminEmail"
            class="block text-sm font-medium text-text-secondary mb-2"
            >Tu Email</label
          >
          <input
            type="email"
            id="adminEmail"
            name="adminEmail"
            required
            class="w-full bg-background border border-accent/20 rounded-md p-3 text-text-primary focus:ring-accent focus:border-accent transition-colors"
          />
        </div>

        <div>
          <label
            for="adminPassword"
            class="block text-sm font-medium text-text-secondary mb-2"
            >Contraseña</label
          >
          <input
            type="password"
            id="adminPassword"
            name="adminPassword"
            required
            minlength="8"
            class="w-full bg-background border border-accent/20 rounded-md p-3 text-text-primary focus:ring-accent focus:border-accent transition-colors"
          />
        </div>

        <button
          type="submit"
          class="w-full bg-amber-500 text-white font-heading font-bold py-3 px-4 rounded-xl hover:bg-amber-400 transition-colors duration-300 cursor-pointer disabled:bg-opacity-50 disabled:cursor-not-allowed"
        >
          Registrar Restaurante
        </button>
      </form>

      <!-- Contenedor para mostrar mensajes de éxito o error -->
      <div id="form-message" class="mt-4 text-center"></div>

      <p class="text-center text-sm text-text-secondary mt-6">
        ¿Ya tienes una cuenta? <a
          href="/login"
          class="font-medium text-accent hover:underline">Inicia sesión</a
        >
      </p>
    </div>
  </main>
</Layout>

<script src="../scripts/onboarding-form.ts"></script>
