---
export interface Props {
  imageUrl: string;
  name: string;
  description: string;
  price: number;
}

const { imageUrl, name, description, price } = Astro.props;
---

<div
  class="bg-surface rounded-lg flex flex-col overflow-hidden shadow-lg transition-transform duration-300 hover:scale-105"
>
  <img
    src={imageUrl}
    alt={`Imagen de ${name}`}
    class="w-full h-48 object-cover"
  />

  <div class="p-4 flex flex-col flex-grow">
    <h3
      class="font-heading text-xl font-semibold text-text-primary mb-2 truncate"
    >
      {name}
    </h3>

    <p class="text-text-secondary text-sm mb-4 flex-grow min-h-[40px]">
      {description}
    </p>

    <div
      class="flex justify-between items-center mt-auto pt-4 border-t border-white/5"
    >
      <span class="font-heading font-bold text-lg text-accent">
        ${price.toFixed(2)}
      </span>
      <button
        class="bg-accent text-white font-heading font-semibold text-sm py-2 px-4 rounded-full hover:bg-opacity-80 transition-colors"
      >
        AÃ±adir
      </button>
    </div>
  </div>
</div>
