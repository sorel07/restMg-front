---
// Obtenemos la ruta actual de la URL para poder resaltar el enlace activo.
const { pathname } = Astro.url;

// Función de ayuda para determinar si un enlace de navegación está "activo"
// Para la ruta principal '/admin', busca una coincidencia exacta
// Para las demás rutas, comprueba si la URL actual *comienza* con el href del enlace
// Esto asegura que /admin/users/new también resalte el enlace /admin/users
const isActive = (href: string) => {
  if (href === "/admin") return pathname === href;
  return pathname.startsWith(href);
};
---

<aside
  id="sidebar"
  class="w-64 bg-surface p-4 flex-col flex-shrink-0 rounded-r-xl shadow-2xl z-10 transition-all duration-300 ease-in-out hidden md:flex"
>
  <!-- Cabecera: Contiene el logo y se mantiene simple -->
  <header class="mb-10 h-8 flex items-center">
    <a href="/admin" class="flex items-center gap-x-2" title="Ir al Dashboard">
      <span
        id="sidebar-logo-text"
        class="font-heading text-2xl font-bold text-accent transition-opacity duration-300 whitespace-nowrap"
      >
        RestMg
      </span>
    </a>
  </header>

  <!-- Navegación Principal -->
  <nav class="flex flex-col space-y-2 flex-shrink-0">
    <a
      href="/admin"
      title="Dashboard"
      class:list={[
        "flex items-center gap-x-4 px-2 py-2 rounded-md transition-colors font-medium",
        "focus:outline-none focus-visible:ring-2 focus-visible:ring-accent",
        { "bg-accent text-white font-semibold shadow-md": isActive("/admin") },
        { "hover:bg-accent/10 hover:text-accent": !isActive("/admin") },
      ]}
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6 flex-shrink-0"
        ><path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M3.75 6A2.25 2.25 0 0 1 6 3.75h2.25A2.25 2.25 0 0 1 10.5 6v2.25a2.25 2.25 0 0 1-2.25 2.25H6a2.25 2.25 0 0 1-2.25-2.25V6ZM3.75 15.75A2.25 2.25 0 0 1 6 13.5h2.25a2.25 2.25 0 0 1 2.25 2.25V18a2.25 2.25 0 0 1-2.25 2.25H6A2.25 2.25 0 0 1 3.75 18v-2.25ZM13.5 6a2.25 2.25 0 0 1 2.25-2.25H18A2.25 2.25 0 0 1 20.25 6v2.25A2.25 2.25 0 0 1 18 10.5h-2.25a2.25 2.25 0 0 1-2.25-2.25V6ZM13.5 15.75a2.25 2.25 0 0 1 2.25-2.25H18a2.25 2.25 0 0 1 2.25 2.25V18A2.25 2.25 0 0 1 18 20.25h-2.25A2.25 2.25 0 0 1 13.5 18v-2.25Z"
        ></path></svg
