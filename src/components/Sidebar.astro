        >Cerrar Sesión</span
      >
    </button>
  </footer>
</aside>

<!-- Script del lado del cliente para manejar toda la interactividad del sidebar -->
<script>
  import { removeToken } from "../services/auth";

  // --- Lógica del Botón de Logout ---
  const logoutButton = document.getElementById("logout-button");
  if (logoutButton) {
    logoutButton.addEventListener("click", () => {
      removeToken();
      window.location.href = "/login";
    });
  }

  // --- Lógica del Sidebar Colapsable ---
  const sidebar = document.getElementById("sidebar");
  const clickableSpace = document.getElementById("clickable-space");
  const logoText = document.getElementById("sidebar-logo-text");
  const sidebarTexts = document.querySelectorAll(".sidebar-text");
  const iconCollapse = document.getElementById("icon-collapse");
  const iconExpand = document.getElementById("icon-expand");

  // Función que aplica los cambios visuales al DOM
  const applySidebarState = (isOpen: boolean) => {
    if (!sidebar) return;
    sidebar.classList.toggle("w-64", isOpen);
    sidebar.classList.toggle("w-20", !isOpen);
    logoText?.classList.toggle("opacity-0", !isOpen);
    logoText?.classList.toggle("opacity-100", isOpen);
    logoText?.classList.toggle("hidden", !isOpen);
    iconCollapse?.classList.toggle("hidden", !isOpen);
    iconExpand?.classList.toggle("hidden", isOpen);
    sidebarTexts.forEach((text) => {
      text.classList.toggle("opacity-0", !isOpen);
      text.classList.toggle("opacity-100", isOpen);
      text.classList.toggle("invisible", !isOpen);
    });
  };

  // Función que se ejecuta al hacer clic en el botón de toggle
  const toggleSidebar = () => {
    if (!sidebar) return;
    const isCurrentlyOpen = sidebar.classList.contains("w-64");
    const newIsOpenState = !isCurrentlyOpen;
    // Guarda el nuevo estado en el almacenamiento local para persistencia
    localStorage.setItem("sidebarOpen", newIsOpenState.toString());
    applySidebarState(newIsOpenState);
  };

  // Asignar el evento al botón de toggle
  clickableSpace?.addEventListener("click", toggleSidebar);

  // Lógica para establecer el estado inicial cuando la página carga
  document.addEventListener("DOMContentLoaded", () => {
    // Lee el estado guardado del localStorage
    const savedState = localStorage.getItem("sidebarOpen");
    // Si no hay nada guardado, por defecto estará abierto
    const initialStateIsOpen = savedState !== "false";

    if (sidebar) {
      // Desactiva temporalmente las transiciones para evitar un "flash" al cargar la página
      sidebar.style.transition = "none";
      applySidebarState(initialStateIsOpen);

      // Vuelve a activar las transiciones un instante después
      setTimeout(() => {
        sidebar.style.transition = "";
      }, 50);
    }
  });
</script>
