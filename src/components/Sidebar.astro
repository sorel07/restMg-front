      title="Reportes"
      class:list={[
        "flex items-center gap-x-4 px-2 py-2 rounded-md transition-colors font-medium",
        "focus:outline-none focus-visible:ring-2 focus-visible:ring-accent",
        {
          "bg-accent text-white font-semibold shadow-md":
            isActive("/admin/reports"),
        },
        { "hover:bg-accent/10 hover:text-accent": !isActive("/admin/reports") },
